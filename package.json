{
  "name": "colonies-ts",
  "version": "0.1.1",
  "description": "TypeScript client for ColonyOS",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run --exclude '**/*.integration.test.ts'",
    "test:watch": "vitest --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run src/client.integration.test.ts",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "colonyos",
    "colonies",
    "distributed",
    "orchestration",
    "typescript"
  ],
  "author": "ColonyOS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/colonyos/colonies-ts.git"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^1.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.3",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18"
  }
}
